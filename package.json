{
	"name": "status-bar-param",
	"displayName": "Status Bar Parameter",
	"description": "Add selectable parameter to the status bar, which can be used in vscode configuration files.",
	"version": "1.3.1",
	"publisher": "mschababerle",
	"icon": "images/icon.png",
	"keywords": [
		"parameter",
		"variables",
		"input",
		"status bar",
		"multi-root ready"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Schabimperle/status-bar-param"
	},
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "statusBarParam",
					"name": "Status Bar Parameter"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "StatusBarParam",
			"properties": {
				"statusBarParam.showNames": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "Show the name of the parameter in front of the selected value in the status bar."
				}
			}
		},
		"commands": [
			{
				"command": "statusBarParam.add",
				"category": "StatusBarParam",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "statusBarParam.select",
				"category": "StatusBarParam",
				"title": "Change Selection"
			},
			{
				"command": "statusBarParam.edit",
				"category": "StatusBarParam",
				"title": "Edit",
				"icon": "$(edit)"
			},
			{
				"command": "statusBarParam.delete",
				"category": "StatusBarParam",
				"title": "Delete",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "statusBarParam.add",
					"when": "view == statusBarParam",
					"group": "navigation@2"
				},
				{
					"command": "statusBarParam.edit",
					"when": "view == statusBarParam",
					"group": "navigation@1"
				}
			],
			"view/item/context": [
				{
					"command": "statusBarParam.add",
					"when": "viewItem == JsonFile",
					"group": "inline"
				},
				{
					"command": "statusBarParam.edit",
					"group": "inline@1",
					"when": "viewItem == Param"
				},
				{
					"command": "statusBarParam.delete",
					"group": "inline@2",
					"when": "viewItem == Param"
				}
			]
		}
	},
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npx tsc -p ./",
		"lint": "npx eslint src --ext ts",
		"watch": "npx tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.20.4",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.2.0",
		"typescript": "^3.9.9",
		"vscode-test": "^1.5.1"
	},
	"dependencies": {
		"jsonc-parser": "^2.3.1"
	}
}