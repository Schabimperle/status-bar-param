{
    "$id": "input_schema.json",
    "type": "object",
    "if": {
        "properties": {
            "type": {
                "const": "command"
            },
            "command": {
                "type": "string",
                "pattern": "^statusBarParam\\.get\\..*$"
            }
        }
    },
    "then": {
        "properties": {
            "args": {
                "oneOf": [
                    {
                        "$ref": "array_options_schema.json"
                    },
                    {
                        "$ref": "command_options_schema.json"
                    }
                ]
            }
        }
    }
}